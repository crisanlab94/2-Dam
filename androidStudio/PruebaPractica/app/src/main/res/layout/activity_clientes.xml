<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:background="@color/principal"
    android:padding="16dp">

    <TableRow>
        <TextView
            android:text="Nombre:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce tu nombre"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Apellidos:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/apellidos"
            android:hint="Introduce tus appellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</TableRow>

    <TableRow>
        <TextView
            android:text="Telefono:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/telefono"
            android:hint="Introduce tu número de télefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Correo Eléctronico:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/correo"
            android:hint="Introduce tu correo eléctronico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Dirección:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/direccion"
            android:hint="Introduce tu direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <TextView
            android:textStyle="bold"
            android:text="Selecciona turno preferencia:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

    <RadioGroup
            android:id="@+id/grupoPreferencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mañana"
                android:text="Mañana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/tarde"
                android:text="Tarde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/indiferente"
                android:text="Indiferente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    <TableRow>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enviar" />
    </TableRow>
</TableLayout>
