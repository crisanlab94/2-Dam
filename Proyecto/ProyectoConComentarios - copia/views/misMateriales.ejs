<%- include("template/cabecera", {tituloWeb: 'Mis Materiales'}) %>

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="bi bi-folder2-open me-2 text-primary"></i>Mi Biblioteca</h2>
            <p class="text-muted mb-0 small">Gestiona tus documentos y apuntes.</p>
        </div>
        <a href="/estudiantes/mi-perfil/ver" class="btn btn-outline-primary fw-bold rounded-pill px-4 shadow-sm">
            Volver al Panel
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 20px;">
                <h5 class="fw-bold mb-3">Subir Nuevo Material</h5>
                <form id="formSubirMaterial">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted text-uppercase">Seleccionar Archivo</label>
                        <input type="file" name="archivoMaterial" id="archivoInput" class="form-control rounded-3" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 fw-bold py-2 rounded-3 shadow-sm">
                        <i class="bi bi-cloud-arrow-up me-2"></i>Subir a la nube
                    </button>
                </form>
                <div class="mt-4 p-3 bg-light rounded-3">
                    <small class="d-block text-muted mb-1"><i class="bi bi-info-circle me-1"></i>Formatos: PDF, Word, Imagen.</small>
                    <small class="d-block text-muted"><i class="bi bi-info-circle me-1"></i>Tamaño máximo: 10MB.</small>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 20px;">
                <h5 class="fw-bold mb-3">Documentos Almacenados</h5>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr class="small text-muted">
                                <th>NOMBRE</th>
                                <th class="text-center">FECHA</th>
                                <th class="text-end">ACCIONES</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (estudiante.archivos && estudiante.archivos.length > 0) { %>
                                <% estudiante.archivos.forEach(archivo => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-file-earmark-text text-primary fs-4 me-2"></i>
                                                <span class="fw-bold small text-truncate" style="max-width: 250px;"><%= archivo.nombre_archivo %></span>
                                            </div>
                                        </td>
                                        <td class="text-center small text-muted">
                                            <%= new Date(archivo.fecha_subida).toLocaleDateString() %>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group shadow-sm">
                                                <a href="/uploads/materiales/<%= archivo.ruta_almacenamiento %>" target="_blank" class="btn btn-sm btn-light border">
                                                    <i class="bi bi-eye text-primary"></i>
                                                </a>
                                                <button onclick="eliminarArchivo('<%= archivo._id %>')" class="btn btn-sm btn-light border">
                                                    <i class="bi bi-trash text-danger"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="3" class="text-center py-5">
                                        <i class="bi bi-cloud-slash fs-1 text-light d-block mb-2"></i>
                                        <p class="text-muted">Aún no has subido ningún material.</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('formSubirMaterial').addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        try {
            const response = await fetch('/estudiantes/subir-material', {
                method: 'POST',
                body: formData
            });
            const data = await response.json();
            if (data.estado) {
                window.location.reload();
            } else {
                alert("Error: " + data.mensaje);
            }
        } catch (error) {
            console.error(error);
        }
    });

    async function eliminarArchivo(id) {
        if (!confirm('¿Eliminar este documento?')) return;
        try {
            const response = await fetch(`/estudiantes/eliminar-material/${id}`, {
                method: 'DELETE'
            });
            const data = await response.json();
            if (data.estado) {
                window.location.reload();
            }
        } catch (error) {
            console.error(error);
        }
    }
</script>

<%- include("template/cierre") %>