<%- include("template/cabecera", {tituloWeb: 'Panel de Administración' }) %>

    <div class="container">
        <h1>Gestión de Estudiantes</h1>

        <a class="btn btn-success btn-block my-4" href="/estudiantes/crear">Crear nuevo Estudiante</a>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID Entidad</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Fecha Nacimiento</th>
                    <th scope="col">Email</th>
                    <th scope="col">Clave</th>
                    <th scope="col">Fecha Registro</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayEstudiantes.length> 0) { %>

                    <% arrayEstudiantes.forEach(estudiante=> { %>
                        <tr>
                            <td>
                                <%= estudiante.id_entidad ? estudiante.id_entidad : 'Sin Entidad' %>
                            </td>

                            <td>
                                <%= estudiante.nombre %>
                            </td>

                            <td>
                                <%= estudiante.fecha_nacimiento ? estudiante.fecha_nacimiento.toLocaleDateString()
                                    : '---' %>
                            </td>

                            <td>
                                <%= estudiante.email %>
                            </td>

                            <td>
                                <%= estudiante.clave %>
                            </td>

                            <td>
                                <%= estudiante.fecha_registro ? estudiante.fecha_registro.toLocaleDateString() : '---'
                                    %>
                            </td>

                            <td>
                                <a class="btn btn-warning btn-sm" href="estudiantes/<%= estudiante.id %>">
                                    Editar / Eliminar
                                </a>
                            </td>
                        </tr>
                        <% }) %>

                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center">No hay estudiantes registrados</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <%- include("template/cierre") %>