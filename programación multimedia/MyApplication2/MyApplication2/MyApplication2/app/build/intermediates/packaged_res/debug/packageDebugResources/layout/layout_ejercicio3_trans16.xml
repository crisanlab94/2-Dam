<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/padre">

    <RelativeLayout
        android:id ="@+id/hijo1"
        android:layout_width ="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#40315B">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo2"
        android:layout_width="192dp"
        android:layout_height="109dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/hijo1"
        android:background="#EBEFBDAD">
    </RelativeLayout>

    <RelativeLayout
        android:id ="@+id/hijo3"
        android:layout_width ="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#D5C77F" />

    <RelativeLayout
        android:id ="@+id/central"
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hijo3"
        android:layout_above="@id/hijo5"
        android:background="#CE4813" />

    <RelativeLayout
        android:id ="@+id/hijo5"
        android:layout_width ="180dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#2F2B2F" />

    <RelativeLayout
        android:id ="@+id/hijo6"
        android:layout_width ="234dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#DED230" />
</RelativeLayout>