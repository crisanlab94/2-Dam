<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_amarillo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1A3A5A"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:id="@+id/tvSaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Hola, Cristina!"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu progreso esta semana:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="70%"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/pbProgreso"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_registro"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:text="Notificaciones Prioritarias"
                        android:textColor="#1A3A5A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/bell_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_notif_red"
                        android:padding="10dp"
                        android:text="LENGUA: Estudiar tema 3 (Faltan 1 día)"
                        android:textColor="#852221"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_notif_blue"
                        android:padding="10dp"
                        android:text="HISTORIA: Recuerda entregar el power point"
                        android:textColor="#3D4EB9"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/card_registro"
                        android:gravity="center"
                        android:padding="15dp">
                        <TextView android:text="Realizar Test" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/card_registro"
                        android:gravity="center"
                        android:padding="15dp">
                        <TextView android:text="Tutor IA" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <CalendarView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:elevation="4dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#1A3A5A"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="Calendario" android:textColor="@color/white" android:gravity="center" android:textSize="12sp"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="Biblioteca" android:textColor="@color/white" android:gravity="center" android:textSize="12sp"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="Métodos" android:textColor="@color/white" android:gravity="center" android:textSize="12sp"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="Perfil" android:textColor="@color/white" android:gravity="center" android:textSize="12sp"/>
    </LinearLayout>

</RelativeLayout>