<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Proyecto" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/fondo_amarillo</item>
        <item name="colorPrimary">@color/boton_amarillo</item>
    </style>

    <style name="Theme.Proyecto" parent="Base.Theme.Proyecto" />

    <style name="LabelForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="InputForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/input_redondeado</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>