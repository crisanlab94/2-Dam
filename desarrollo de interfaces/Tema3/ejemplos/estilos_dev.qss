/* --- 1. GENERAL --- */
QMainWindow, QWidget {
    background-color: #f0f2f5; /* Gris azulado muy suave */
    font-family: "Segoe UI", sans-serif;
    color: #333;
    font-size: 13px;
}

/* --- 2. PESTAÑAS (QTabWidget) - ESTILO MODERNO --- */
QTabWidget::pane {
    border: 1px solid #c8c8c8;
    background: white;
    border-radius: 5px;
    top: -1px; /* Para fusionar con la pestaña */
}

QTabBar::tab {
    background: #e1e4e8;
    color: #586069;
    border: 1px solid #c8c8c8;
    border-bottom-color: #c8c8c8;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 20px;
    min-width: 80px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background: white;
    color: #0366d6; /* Azul GitHub */
    font-weight: bold;
    border-bottom-color: white; /* Fusión visual */
    border-top: 2px solid #0366d6;
}

QTabBar::tab:hover {
    background: #f6f8fa;
}

/* --- 3. INPUTS Y VALIDACIONES --- */
QLineEdit, QSpinBox, QComboBox {
    border: 1px solid #d1d5da;
    border-radius: 3px;
    padding: 5px;
    background: white;
}
QLineEdit:focus, QSpinBox:focus, QComboBox:focus {
    border: 2px solid #0366d6;
}

/* Validación Nombre Proyecto */
QLineEdit[error="true"] {
    border: 2px solid #d73a49; /* Rojo error */
    background-color: #ffeef0;
}
QLineEdit[error="false"] {
    border-left: 4px solid #28a745; /* Línea verde lateral */
}

/* --- 4. BLOC DE NOTAS LIMITADO (DOCKERFILE) --- */
QTextEdit {
    border: 1px solid #d1d5da;
    border-radius: 3px;
    font-family: "Consolas", monospace;
    background-color: white;
}

/* Estado: OK */
QTextEdit[limite="ok"] {
    border: 2px solid #28a745;
}

/* Estado: EXCEDIDO (Aviso visual fuerte) */
QTextEdit[limite="excedido"] {
    border: 2px solid #d73a49;
    background-color: #fff5f5; /* Fondo rojizo */
}

/* --- 5. GRUPOS --- */
QGroupBox {
    font-weight: bold;
    border: 1px solid #e1e4e8;
    border-radius: 6px;
    margin-top: 20px;
    background-color: white;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px;
    color: #0366d6;
}

/* --- 6. BOTONES CON GRADIENTES --- */
QPushButton {
    border: 1px solid #b0b0b0;
    border-radius: 4px;
    padding: 6px 12px;
    font-weight: bold;
    /* Gradiente suave gris */
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #ffffff, stop:1 #f0f0f0);
}
QPushButton:hover {
    background-color: #e6ebf1;
}

/* Botón GENERAR (Estilo Primario) */
QPushButton#btnGenerar {
    color: white;
    border: 1px solid #2ea44f;
    /* Gradiente Verde */
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #2ea44f, stop:1 #22863a);
}
QPushButton#btnGenerar:hover {
    background-color: #2c974b;
}
QPushButton#btnGenerar:pressed {
    background-color: #1e7033;
    padding-top: 8px;
}
QPushButton#btnGenerar:disabled {
    background-color: #94d3a2;
    border-color: #94d3a2;
}

/* Botón LIMPIAR */
QPushButton#btnLimpiar {
    color: #d73a49; /* Rojo texto */
}
QPushButton#btnLimpiar:hover {
    background-color: #ffeef0;
    border-color: #d73a49;
}