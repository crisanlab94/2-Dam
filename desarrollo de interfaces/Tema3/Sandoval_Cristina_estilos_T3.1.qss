QLabel#titulo {
    font-size: 20px;
    font-weight: bold;
     
}


QLineEdit {
    border: 2px solid #8AB6F9;
    border-radius: 8px;
    padding: 6px;
    background-color: #E8F0FE;
}

QLineEdit:focus {
    border: 2px solid #3D7BDB;
    background-color: #FFFFFF;
}

/* Bot√≥n Enviar */
QPushButton#btnEnviar {
    background-color: #4CAF50;   
    color: white;                 
    padding: 6px 12px;            
    border: 2px solid #388E3C;    
    border-radius: 8px;           
    font-size: 14px;
    font-weight: bold;
}

QPushButton#btnEnviar:hover {
    background-color: #66BB6A;   
    border-color: #2E7D32;
}

QPushButton#btnEnviar:pressed {
    background-color: #388E3C;   
    border-color: #1B5E20;
}


QPushButton#btnBorrar {
    background-color: #a86ec4ff;    
    color: white;
    padding: 6px 12px;
    border: 2px solid #720fb4ff;
    border-radius: 8px;
    font-size: 14px;
    font-weight: bold;
}

QPushButton#btnBorrar:hover {
    background-color: #E57373;  
    border-color: #C62828;
}

QPushButton#btnBorrar:pressed {
    background-color: #C62828;   
    border-color: #B71C1C;
}


QCheckBox {
    font-size: 14px;
    padding-top: 12px;
    background: transparent;  
}


QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 4px;
    border: 2px solid #5C8ED8;
    background: white;
}


QCheckBox::indicator:hover {
    border-color: #7AA8F0;
}


QCheckBox::indicator:checked {
    background-color: #4CAF50; 
    border: 2px solid #388E3C;
}



QCheckBox#newsletterCheck {
   
    padding-bottom: 14px;
}

QRadioButton {
    font-size: 14px;
    padding-bottom: 14px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border-radius: 9px;
    border: 2px solid #5C8ED8;
    background: white;
}

QRadioButton::indicator:hover {
    border-color: #7AA8F0;
}

QRadioButton::indicator:checked {
    background-color: #5C8ED8;
}


QComboBox {
    background-color: #E8F0FE;
    border: 2px solid #8AB6F9;
    border-radius: 8px;
    padding: 6px;
}

QComboBox:hover {
    border-color: #3D7BDB;
}

QComboBox::drop-down {
    width: 25px;
    border-left: 1px solid #8AB6F9;
}

QComboBox::down-arrow {
    image: url(none);  /* sin imagen obligatoria */
    border: 6px solid transparent;
    border-top: 8px solid #5C8ED8;  /* triangulito */
}

QComboBox QAbstractItemView {
    background: white;
    selection-background-color: #D6E4FF;
    border: 1px solid #8AB6F9;
}
