/* Efectos al pasar el ratón */
QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #5dade2; /* Un azul un pelín más claro al tocar */
}

QSpinBox::up-button:pressed, QSpinBox::down-button:pressed {
    background-color: #1abc9c; /* Turquesa al pulsar */
    padding-top: 2px; /* Efecto de botón pulsado */
}

/* --- SLIDER --- */
QSlider::groove:horizontal {
    border: 1px solid #bdc3c7;
    height: 10px;
    background: #ecf0f1;
    border-radius: 5px;
}
QSlider::handle:horizontal {
    background: #3498db;
    border: 3px solid white;
    width: 24px;
    height: 24px;
    margin: -8px 0;
    border-radius: 12px;
    box-shadow: 0 0 5px rgba(0,0,0,0.2);
}

/* --- MENÚS Y BARRAS --- */
QMenuBar {
    background-color: #ffffff;
    color: #2c3e50;
}
QMenuBar::item:selected {
    background-color: #dfe6e9;
}
QToolBar {
    background-color: #ffffff;
    border-bottom: 1px solid #bdc3c7;
}
QStatusBar {
    background: #2c3e50;
    color: white;
}
QStatusBar QLabel {
    color: white; 
}