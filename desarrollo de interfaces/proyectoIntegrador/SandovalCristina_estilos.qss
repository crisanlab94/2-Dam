/* --- CONFIGURACIÓN GLOBAL --- */
* {
    font-family: "Segoe UI", "Arial", sans-serif;
    font-size: 14px;
   
    color: #2c3e50; 
}

/* Fondo principal:  */
QMainWindow, QDialog {
    background-color: #f4f7f6; 
}



QWidget {
   
    outline: none;
}

/* Dock Widget y Contenedores */
QDockWidget {
    color: #2c3e50;
}
QDockWidget::title {
    background: #dfe6e9;
    padding: 6px;
    border-radius: 4px;
}

/* --- TÍTULOS Y ETIQUETAS --- */
QLabel {
    color: #2c3e50;
    font-weight: 500;
    padding: 2px;
    background-color: transparent; 
}

/* --- BOTONES ESTÁNDAR (Azul) --- */
QPushButton {
    background-color: #3498db;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: bold;
}
QPushButton:hover { background-color: #2980b9; }
QPushButton:pressed { background-color: #1abc9c; }

/* --- BOTÓN DE ALERTA (Rojo) --- */
QPushButton#btnAlerta {
    background-color: #e74c3c;
    border-bottom: 4px solid #c0392b;
    color: white;
    font-weight: 800;
}
QPushButton#btnAlerta:hover { background-color: #ff6b6b; }
QPushButton#btnAlerta:pressed {
    border-bottom: 0px;
    margin-top: 4px;
}

/* --- CAMPOS DE TEXTO (Blanco con borde) --- */
QLineEdit, QTextEdit, QComboBox {
    background-color: #ffffff; /* Fondo blanco explícito */
    color: #2c3e50; /* Texto oscuro */
    border: 1px solid #bdc3c7;
    border-radius: 6px;
    padding: 6px;
}

QLineEdit:focus, QTextEdit:focus, QComboBox:focus {
    border: 2px solid #3498db;
}

/* --- SPINBOXES --- */
/* Los botones laterales del SpinBox */
QSpinBox::up-button, QSpinBox::down-button {
    width: 30px; 
    background-color: #3498db; /* Azul claro bonito */
    border: none;
    border-left: 1px solid #2980b9;
    margin: 0px;
    padding: 0px; /* IMPORTANTE: Sin relleno para que no se oculte la flecha */
}

